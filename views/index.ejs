<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Book Notes Community</title>
  <link rel="stylesheet" href="/styles.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body>
  <div class="container">
    <!-- Header Section -->
    <header class="header">
      <div class="header-content">
        <h1><i class="fas fa-book-open"></i> Book Notes Community</h1>
        <p>Discover readers and their book collections</p>
      </div>
      
      <div class="header-actions">
        <% if (user) { %>
          <a href="/dashboard" class="add-btn">
            <i class="fas fa-tachometer-alt"></i> My Books
          </a>
          <div class="auth-buttons">
            <span class="user-welcome">Welcome, <%= user.username || user.first_name || 'User' %>!</span>
            <a href="/logout" class="auth-btn logout-btn">
              <i class="fas fa-sign-out-alt"></i> Logout
            </a>
          </div>
        <% } else { %>
          <div class="auth-buttons">
            <a href="/login" class="auth-btn login-btn">
              <i class="fas fa-sign-in-alt"></i> Login
            </a>
            <a href="/register" class="auth-btn register-btn">
              <i class="fas fa-user-plus"></i> Register
            </a>
          </div>
        <% } %>
      </div>
    </header>

    <!-- Welcome Section -->
    <section class="welcome-section">
      <div class="welcome-content">
        <div class="welcome-text">
          <h2>Welcome to Book Notes Community</h2>
          <p>Discover amazing readers, explore their book collections, and find your next great read. Join our community of book lovers and share your reading journey.</p>
        </div>
        
        <!-- Community Stats -->
        <div class="welcome-stats">
          <div class="stat-card">
            <div class="stat-icon">
              <i class="fas fa-users"></i>
            </div>
            <div class="stat-content">
              <span class="stat-number"><%= users.length %></span>
              <span class="stat-label">Active Readers</span>
            </div>
          </div>
          
          <div class="stat-card">
            <div class="stat-icon">
              <i class="fas fa-book-open"></i>
            </div>
            <div class="stat-content">
              <span class="stat-number"><%= users.reduce((total, user) => total + user.book_count, 0) %></span>
              <span class="stat-label">Books Shared</span>
            </div>
          </div>
          
          <div class="stat-card">
            <div class="stat-icon">
              <i class="fas fa-star"></i>
            </div>
            <div class="stat-content">
              <span class="stat-number"><%= users.length > 0 ? (users.reduce((total, user) => total + user.avg_rating, 0) / users.length).toFixed(1) : '0.0' %></span>
              <span class="stat-label">Avg Rating</span>
            </div>
          </div>
        </div>
        
        <div class="welcome-features">
          <div class="feature-item">
            <div class="feature-icon-wrapper">
              <i class="fas fa-book-open"></i>
            </div>
            <h3>Track Your Reading</h3>
            <p>Keep track of all your books, ratings, and reading notes in one place</p>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon-wrapper">
              <i class="fas fa-users"></i>
            </div>
            <h3>Connect with Readers</h3>
            <p>Discover like-minded readers and share your passion for literature</p>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon-wrapper">
              <i class="fas fa-star"></i>
            </div>
            <h3>Rate & Review</h3>
            <p>Share your thoughts and help others find their next favorite book</p>
          </div>
          
          <div class="feature-item">
            <div class="feature-icon-wrapper">
              <i class="fas fa-search"></i>
            </div>
            <h3>Discover Books</h3>
            <p>Explore new genres and authors through community recommendations</p>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content Section -->
    <main class="main-content">
      
      <!-- Empty State (when no users) -->
      <% if (users.length === 0) { %>
        <div class="empty-state">
          <i class="fas fa-users-slash"></i>
          <h2>No Readers Yet</h2>
          <p>Be the first to join and start building your book collection!</p>
          <a href="/register" class="add-btn">
            <i class="fas fa-user-plus"></i> Join Now
          </a>
        </div>
      <% } else { %>
        
        <!-- Users Grid Section -->
        <section class="users-section">
          <h2 class="section-title">Community Members (<%= users.length %> total)</h2>
          <div class="users-grid">
            <% users.forEach((user, index) => { %>
              <article class="user-card">
                <!-- User Avatar -->
                <div class="user-avatar">
                  <i class="fas fa-user-circle"></i>
                </div>
                
                <!-- User Information -->
                <div class="user-info">
                  <h3 class="user-name"><%= user.first_name %> <%= user.last_name %></h3>
                  <p class="user-username">@<%= user.username %></p>
                  
                  <!-- User Statistics -->
                  <div class="user-stats">
                    <div class="user-stat">
                      <i class="fas fa-book"></i>
                      <span><%= user.book_count %> books</span>
                    </div>
                    <div class="user-stat">
                      <i class="fas fa-star"></i>
                      <span><%= user.avg_rating.toFixed(1) %> avg rating</span>
                    </div>
                  </div>
                  
                  <!-- Action Button -->
                  <% if (locals.user && locals.user.id === user.id) { %>
                    <a href="/dashboard" class="view-btn">
                      <i class="fas fa-eye"></i> View My Books
                    </a>
                  <% } else { %>
                    <a href="/user/<%= user.username %>" class="view-btn">
                      <i class="fas fa-eye"></i> View Books
                    </a>
                  <% } %>
                </div>
              </article>
            <% }); %>
          </div>
        </section>
        
      <% } %>
    </main>
    
  </div>

  <!-- JavaScript Section -->
  <script>
    // Add any interactive functionality here if needed
    console.log('Book Notes Community loaded successfully');
  </script>
</body>
</html>
